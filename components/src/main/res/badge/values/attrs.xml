<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="AndesBadge" tools:ignore="ResourceName">
        <attr name="andesBadgeHierarchy">
            <enum name="loud" value="1000" />
            <enum name="quiet" value="1001" />
        </attr>

        <attr name="andesBadgeType">
            <enum name="neutral" value="2000" />
            <enum name="highlight" value="2001" />
            <enum name="success" value="2002" />
            <enum name="warning" value="2003" />
            <enum name="error" value="2004" />
        </attr>

        <attr name="andesBadgeSize">
            <enum name="large" value="3000" />
            <enum name="small" value="3001" />
        </attr>

        <attr name="andesBadgeModifier">
            <enum name="pill" value="4000" />
            <enum name="dot" value="4001" />
        </attr>

        <attr name="andesBadgeBorder">
            <enum name="corner" value="5000" />
            <enum name="rounded" value="5001" />
            <enum name="standard" value="5002" />
        </attr>

        <attr name="andesBadgeText" format="reference" />
    </declare-styleable>

</resources>