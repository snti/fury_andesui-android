<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="AndesTextfield" tools:ignore="ResourceName">

        <attr name="andesTextfieldLabel" format="reference" />

        <attr name="andesTextfieldHelper" format="reference" />

        <attr name="andesTextfieldHint" format="reference" />

        <attr name="andesTextfieldCounterMinValue" format="integer" />

        <attr name="andesTextfieldCounterMaxValue" format="integer" />

        <attr name="andesTextfieldState">
            <enum name="enabled" value="20" />
            <enum name="error" value="21" />
            <enum name="disabled" value="22" />
            <enum name="readonly" value="23" />
        </attr>

        <attr name="andesTextfieldLeftContent">
            <enum name="prefix" value="10" />
            <enum name="icon" value="12" />
        </attr>


        <attr name="andesTextfieldRightContent">
            <enum name="prefix" value="10" />
            <enum name="suffix" value="11" />
            <enum name="icon" value="12" />
            <enum name="tooltip" value="13" />
            <enum name="validated" value="14" />
            <enum name="clear" value="15" />
            <enum name="action" value="16" />
            <enum name="indeterminate" value="17" />
            <enum name="checkbox" value="18" />
        </attr>
    </declare-styleable>


    <declare-styleable name="AndesTextarea" tools:ignore="ResourceName">

        <attr name="andesTextareaLabel" format="reference" />

        <attr name="andesTextareaHelper" format="reference" />

        <attr name="andesTextareaHint" format="reference" />

        <attr name="andesTextareaCounterMinValue" format="integer" />

        <attr name="andesTextareaCounterMaxValue" format="integer" />

        <attr name="andesTextareaMaxLines" format="integer" />

        <attr name="andesTextareaState">
            <enum name="enabled" value="20" />
            <enum name="error" value="21" />
            <enum name="disabled" value="22" />
            <enum name="readonly" value="23" />
        </attr>
    </declare-styleable>
</resources>